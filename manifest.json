{
  "manifest_version": 3,
  "name": "Greenly Demo Companion",
  "description": "An extension that helps Greenly Salesmen to succeed in their demos.",
  "version": "1.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/favicon.ico"
  },
  "background": {
    "service_worker": "dist/service-worker.js"
  },
  "permissions": ["tabs", "tabGroups", "activeTab", "scripting", "history"],
  "host_permissions": ["<all_urls>"]
}
